<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Senshost"
             x:Class="Senshost.App"
             x:Name="app">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="PageBackgroundBrush">
                <GradientStop Color="{StaticResource Secondary}" Offset="0"/>
                <GradientStop Color="{StaticResource Primary}" Offset="0.6" />
                <GradientStop Color="{StaticResource Secondary}" Offset="1" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
