<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Senshost.Views.LoadingPage"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Title="LoadingPage">
    <Grid RowDefinitions="*" BackgroundColor="{StaticResource Primary}">
        <Image Source="login_logo.png" HorizontalOptions="Center" VerticalOptions="Start" Aspect="AspectFit" Margin="0,150,0,00"
               IsAnimationPlaying="False">
        </Image>
        <skia:SKLottieView
                  Source="loading.json"
                  RepeatCount="-1"
                  VerticalOptions="Center"
                  HorizontalOptions="Center" />
    </Grid>
</ContentPage>
