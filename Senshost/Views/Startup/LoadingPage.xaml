<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Senshost.Views.LoadingPage"
             Title="LoadingPage">
    <Grid RowDefinitions="*" BackgroundColor="{StaticResource Primary}">
        <Image Source="login_logo.png" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFit" Margin="0,-150,0,00"
               IsAnimationPlaying="True">
        </Image>
        <ActivityIndicator IsRunning="True" WidthRequest="60" HeightRequest="60" Color="{StaticResource White}"></ActivityIndicator>
    </Grid>
</ContentPage>
